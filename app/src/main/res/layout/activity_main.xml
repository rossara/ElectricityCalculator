<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFE4E1">

    <!-- Electricity Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="250dp"
        android:layout_height="248dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/electricity_logo"
        android:src="@drawable/electricity_logo" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/electricity_bill_calculator"
        android:textSize="24sp"
        android:textColor="#FF1493"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Units Input -->
    <EditText
        android:id="@+id/etUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_units_consumed"
        android:inputType="numberDecimal"
        android:autofillHints="none"
        android:layout_marginBottom="8dp"
        android:minHeight="48dp" /> <!-- Ensures touch target size is at least 48dp -->

    <!-- Rebate Input -->
    <EditText
        android:id="@+id/etRebate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_rebate_percentage"
        android:inputType="numberDecimal"
        android:autofillHints="none"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" /> <!-- Ensures touch target size is at least 48dp -->

    <!-- Calculate Button -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate_bill"
        android:layout_marginBottom="8dp" />

    <!-- Clear Button -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_marginBottom="16dp" />

    <!-- Result Display -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="@string/result_will_be_displayed"
        android:textColor="#000000" />

    <!-- About Me Button -->
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_me"
        android:layout_marginTop="16dp" />

    <!-- Footer Section with Copyright Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <!-- Copyright Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
